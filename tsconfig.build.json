{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "emitDeclarationOnly": false,
      "declaration": true,
      "declarationDir": "dist/types",
      "jsx": "react-jsx",
      "outDir": "dist"
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "src/stories",
      "**/*.stories.ts",
      "**/*.stories.tsx"
    ]
  }